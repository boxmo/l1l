              - if author[:star]
                .star-ribbon
              .author-name.text-center
                = status_bullet(data.infos_2016.books[key] && data.infos_2016.books[key][:public])
                = author[:name]

        - data.infos.authors.each do |key, author|
          %li{ data: { season: "primeira" }, class: "hidden" }
            %a.author-trigger{ href: "javascript:void(0);", data: { description: author[:bio] , largesrc: image_path("autores/big/#{author[:img_big]}"), title: author[:name], credit: author[:credit], book: key } }
              = image_tag "autores/mini/#{author[:img_active]}", alt: author[:name], class: "img-circle center-align"
              - if author[:star]
                .star-ribbon
              .author-name.text-center
                = status_bullet(data.infos.books[key][:public])
                = author[:name]



%section.container-fluid#books
  .container
    .row
      .col-md-6.col-md-offset-3.text-center
        %ul.nav.nav-pills.season-swithcers
          %li.active
            %a.switch-season{ href: "#", data: { target: "segunda"}  } Segunda Temporada
          %li
            %a.switch-season{ href: "#", data: { target: "primeira"} } Primeira Temporada
    .row
      .col-md-12
        .slider-lazy{ data: { season: "segunda" } }
          - books = Hash[data.infos_2016.books.to_a]
          - books_slider = Hash[books.delete_if { |key, book| !book[:public] }.to_a.reverse]
          - books_slider.each do |key, book|
            %div.text-center
              = link_to "#", class: "book-modal-trigger", data: { toggle: "modal", target: "#book-#{key}" } do
                %img.inline{ "data-lazy" => image_path("books_2016/#{book["img"]}") }
                - if data.infos_2016.authors[key][:star]
                  .book-star-ribbon

        .slider-lazy.books-first-season{ data: { season: "primeira"} }
          - books = Hash[data.infos.books.to_a]
          - books_slider = Hash[books.delete_if { |key, book| !book[:public] }.to_a.reverse]
          - books_slider.each do |key, book|
            %div.text-center
              = link_to "#", class: "book-modal-trigger", data: { toggle: "modal", target: "#book-#{key}" } do
