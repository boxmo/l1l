%section.container-fluid#authors
  .container
    .row
      .col-md-6.col-md-offset-3
        .author-title.text-center
          %h1
            Autores convidados
          %span Saiba quem participa da coleção
          %br
          %br
          %ul.nav.nav-pills.season-swithcers
            %li.active
              %a.switch-season{ href: "#", data: { target: "segunda"}  } Segunda Temporada
            %li
              %a.switch-season{ href: "#", data: { target: "primeira"} } Primeira Temporada

    .row
      %ul#og-grid{ class: "og-grid" }
        - data.infos_2016.authors.each do |key, author|
          %li{ data: { season: "segunda" } }
            %a.author-trigger{ href: "javascript:void(0);", data: { description: author[:bio] , largesrc: image_path("autores/big_2016/#{author[:img_big]}"), title: author[:name], credit: author[:credit], book: key } }
